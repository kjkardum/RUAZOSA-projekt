<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="viewModelBinding"
            type="hr.fer.ruazosa.kviz2022.game.question.GameQuestionViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Demo Question"
            android:textAlignment="center"
            android:padding="5dp"
            android:text="@{viewModelBinding.question.questionText}"
            android:textSize="35sp" />

        <TextView
            android:id="@+id/CountdownTimer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            app:time="@{viewModelBinding.timerSeconds}"
            android:textSize="20sp"/>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:hint="@string/your_answer">

            <com.google.android.material.textfield.TextInputEditText
                android:text="@{viewModelBinding.answer}"
                android:id="@+id/AnswerField"
                android:layout_width="350dp"
                android:layout_height="50dp"
                android:ems="10" />
        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="@{() -> viewModelBinding.answerQuestion()}"
            android:text="@string/next"
            android:layout_marginTop="20dp"/>
    </LinearLayout>

</layout>